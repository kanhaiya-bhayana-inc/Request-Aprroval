<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RequestApproval</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("RequestApproval", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Session["UserName"] != null)
                    {
                        <li><p style="color:#fff;margin-top:15px; margin-left:60px;">@Session["UserName"]'s Dashboard</p></li>
                        <li><p style="color:#fff;margin-top:15px; margin-left:60px;">@Session["RoleName"]</p></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Signup", "SignUp", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Login", "Login", "User", new { area = "" }, new { @class = "nav-link" })</li>

                    }
                </ul>
                <ul class="navbar-nav" style="float:right !important">
                    @if (Session["UserName"] != null)
                    {
                        @*<li><p style="color:#fff;margin-top:15px;">Hello @Session["UserName"]</p></li>*@
                        <li style="color: #fff; margin-top: 8px;">@Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p class="mt-5">&copy; @DateTime.Now.Year - RequestApproval</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
